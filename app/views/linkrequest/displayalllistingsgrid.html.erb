<form>
  <table class=ListComments >
    <tr >
      <% j = 0 %>
      <% @linkrequest.each do |item| %>
        <td style="width:20%" align=center valign=center>
          <div style="width:20%" id=GridCell>
            <table style="width:20%"  >
              <tr>
                <td align=center valign=center>
                  <% mystr = (item.organization_url).to_s %>
                  <% mystr = mystr.gsub('.', '(dot)' )  %>
                  <% img_source = "collaborator/linkrequest_images/#{item.image_file_name}" %>
                  <%= image_tag(img_source, :size => "32x32") %></td>
              </tr>
              <tr>
                <td align=center valign=top style="font-size:x-small;"><%=  mystr %></td>
              </tr>
            </table>
          </div>
        </td>
        <% j += 1 %>
        <% if (j % 3) == 0 %>
        </tr><tr>
        <% end %>
      <% end %>
    </tr>
  </table>
</form>
