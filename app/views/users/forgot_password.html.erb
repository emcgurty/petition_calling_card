<% form_for :users, {:controller => 'users', :action => 'forgot'} do |f| -%>
  <p class=label1>
    Forgot Password
  </p>
  

  <p class=label1>
    <label for="email">Email</label><br />
    <%= f.text_field :email %>
  </p>


  <p class=label1>
    
    <%= submit_tag 'Submit',{ :class=>"button_style" } %>
    <%= link_to "Changed my Mind", root_url,{:class=>"button_style" } %>
  </p>
<% end -%>